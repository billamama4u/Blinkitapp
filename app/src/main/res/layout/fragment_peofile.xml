<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PeofileFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tbProfileFrogment"
        app:titleTextColor="@color/black"
        android:background="@color/white_yellow"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Profile"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:id="@+id/viewprofile"
        android:background="#d4d4d4"
        app:layout_constraintTop_toBottomOf="@id/tbProfileFrogment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewprofile"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My account"
            android:textStyle="bold"
            android:textSize="23.4sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999999"
            android:layout_marginTop="6.5dp"
            android:textSize="19.5sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR INFORMATION"
            android:layout_marginTop="15.6dp"
            android:textSize="15.6sp"
            android:textColor="#6b6c74"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llorders"
            android:weightSum="1"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:src="@drawable/baseline_backpack_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Your Orders"
                android:layout_marginStart="13dp"
                android:textSize="16.9dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="0.1"
                android:tint="@color/black"
                android:src="@drawable/baseline_keyboard_arrow_right_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lladdress"
            android:weightSum="1"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:src="@drawable/baseline_location_city_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Address Book"
                android:layout_marginStart="13dp"
                android:textSize="16.9dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="0.1"
                android:tint="@color/black"
                android:src="@drawable/baseline_keyboard_arrow_right_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llogout"
            android:weightSum="1"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:src="@drawable/baseline_logout_24"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Log Out"
                android:layout_marginStart="13dp"
                android:textSize="16.9dp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_weight="0.1"
                android:tint="@color/black"
                android:src="@drawable/baseline_keyboard_arrow_right_24"/>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>