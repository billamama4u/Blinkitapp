<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="9.1dp">

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:id="@+id/llproductimages"
        android:background="@drawable/categoryshape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:visibility="gone"
                android:id="@+id/iv1"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant"/>
            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:id="@+id/iv2"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:id="@+id/iv3"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/cold_and_juices"/>
            <TextView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:visibility="gone"
                android:id="@+id/iv4"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:text="+1"
                android:textSize="23.4sp"
                android:textStyle="bold"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk,Curd and Paneer"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/tvtype"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#847f7f"
            android:id="@+id/productsleft"
            android:text="6 products"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="See all"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:background="@drawable/bg_seeall"/>
    </LinearLayout>

</LinearLayout>